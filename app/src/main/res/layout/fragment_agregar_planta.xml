<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_nombre_planta"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:inputType="text"
        android:hint="NOMBRE"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        />

    <EditText
        android:id="@+id/edit_ubicacion_planta"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:hint="UBICACIÃ“N"
        app:layout_constraintTop_toBottomOf="@+id/edit_nombre_planta"
        tools:layout_editor_absoluteX="8dp"
        android:inputType="number"
        />

    <Button
        android:id="@+id/boton_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="CREAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_ubicacion_planta" />

</android.support.constraint.ConstraintLayout>